<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhananjay.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.dhananjay.myapplication.activity.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.dhananjay.myapplication.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity android:name="com.dhananjay.myapplication.activity.NewPostActivity" />
        <activity android:name="com.dhananjay.myapplication.activity.PostDetailActivity" />
        <activity android:name="com.dhananjay.myapplication.activity.PostUpdateActivity" />

    </application>

</manifest>